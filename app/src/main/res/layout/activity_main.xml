<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.news.MainActivity"
    android:orientation="vertical"
    android:weightSum="11"
    >
    <HorizontalScrollView
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tab:tabIndicatorColor="@color/colorGreen"
            tab:tabIndicatorHeight="3dp"
            tab:paddingStart="@dimen/activity_horizontal_margin"
            tab:tabTextColor="#000000"
            tab:tabSelectedTextColor="@color/colorPeek">

        </android.support.design.widget.TabLayout>
    </HorizontalScrollView>

<android.support.v4.view.ViewPager
    android:id="@+id/view_pager"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
<android.support.design.widget.TabLayout
    android:layout_weight="5"
    android:id="@+id/tab_layout2"
    tab:tabIndicatorColor="@color/colorGreen"
    tab:tabTextColor="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></android.support.design.widget.TabLayout>
</LinearLayout>
